                                                                    {
                                                                        <th>@Model[i].CourseName</th>
                                                                        <th>@Model[i].CoordinatorName</th>
                                                                        <th>@Model[i].FacultyName</th>
                                                                    }
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
