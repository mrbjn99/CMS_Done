                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- [ breadcrumb ] end -->
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5> List Classes</h5>
                                        </div>
                                        <div class="card-block table-border-style">
                                            @using (Html.BeginForm("DownloadZip", "Posts", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th></th>
                                                                <th>Post Name</th>
                                                                <th>Student Name</th>
                                                                <th>Assignment Name</th>
                                                                <th>File Name</th>
                                                                @if (User.IsInRole("Marketing Manager"))
                                                                {
                                                                    <th>Course Name</th>
                                                                    <th>Coordinator Name</th>
                                                                    <th>Faculty Name</th>
                                                                }
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @for (int i = 0; i < Model.Count(); i++)
                                                            {
                                                                <tr>
                                                                    <td>@Html.CheckBoxFor(m => m[i].IsSelected)</td>
                                                                    <th>@Model[i].PostName</th>
                                                                    <th>@Model[i].StudentName</th>
                                                                    <th>@Model[i].AssignmentName</th>
                                                                    <td>
                                                                        @Model[i].FileName
