		<div class="pcoded-main-container">
			<div class="pcoded-wrapper">
				<div class="pcoded-content">
					<div class="pcoded-inner-content">
						<div class="pcoded-inner-content">
							<!-- [ breadcrumb ] start -->
							<div class="page-header">
								<div class="page-block">
									<div class="row align-items-center">
										<div class="col-md-12">
											<div class="page-header-title">
												<h5 class="m-b-10">@Html.DisplayName("Welcome,  " + User.Identity.GetUserName() + "!")</h5>
											</div>
											<ul class="breadcrumb">
												<li class="breadcrumb-item"><a href="~/Home/Index"><i class="feather icon-home"></i></a></li>
												<li class="breadcrumb-item"><a href="javascript:">Create Comment</a></li>
											</ul>
										</div>
									</div>
								</div>
							</div>
							<!-- [ breadcrumb ] end -->
							<!-- [ Main Content ] start -->
							<div class="row">
								<div class="col-xl-12">
									<div class="card" style="max-width:40%; margin: 0 auto; float:none; margin-bottom:10px;">
										<div class="card-header">
											<h5> Create Comment</h5>
										</div>
										<div class="card-block table-border-style" style="margin: 0 auto; float:none; margin-bottom:10px;">
											@using (Html.BeginForm("CreateComment", "Posts", FormMethod.Post))
											{
												@Html.AntiForgeryToken()
												<div class="form-group">
													@Html.LabelFor(p => p.Comment.Description)
													@Html.TextBoxFor(p => p.Comment.Description, new { @class = "form-control" })
													@Html.ValidationMessageFor(p => p.Comment.Description, "", new { @class = "text-danger" })
												</div>

												<button type="submit" class="btn btn-primary">Assign</button>

												<script src='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.min.js'></script>

												@*<script>
													document.getElementById('sweetalert').onclick = function () {
