@model IEnumerable<PostSys.Models.Comment>

@{
    ViewBag.Title = "DetailComment";
}

<h2>DetailComment</h2>
@using (Html.BeginForm("DetailComment", "Posts", FormMethod.Post))
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}


