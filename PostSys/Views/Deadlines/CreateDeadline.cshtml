				$(function () {
					$(".datepicker").datepicker({
						dateFormat: "mm/dd/yy",
						yearRange: "2021:2023",
						showOn: "both",
						buttonText: "<i class='far fa-calendar'></i>"
					})
				});
			</script>
		}


