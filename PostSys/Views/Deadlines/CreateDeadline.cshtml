									<div class="card" style="max-width:40%; margin: 0 auto; float:none; margin-bottom:10px;">
										<div class="card-header">
											<h5> Create Deadlines</h5>
										</div>
										<div class="card-block table-border-style" style="margin: 0 auto; float:none; margin-bottom:10px;">
											@using (Html.BeginForm("CreateDeadline", "Deadlines", FormMethod.Post))
											{
												@Html.HiddenFor(i => i.Id)

												<div>
													@Html.EditorFor(p => p.StartDate, new { htmlAttributes = new { @class = "datepicker", placeholder = "Start Date" } })
													@Html.ValidationMessageFor(p => p.StartDate, "", new { @class = "text-danger" })
												</div>
												<br />
												<div>
													@Html.EditorFor(p => p.EndDate, new { htmlAttributes = new { @class = "datepicker", placeholder = "End Date" } })
													@Html.ValidationMessageFor(p => p.EndDate, "", new { @class = "text-danger" })
												</div>


												<br />
												<center><button type="submit" class="btn btn-primary">Create</button></center>

												<script src='https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.min.js'></script>

												@*<script>
													document.getElementById('sweetalert').onclick = function () {
